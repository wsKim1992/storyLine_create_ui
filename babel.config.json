{
    "presets":[
        [
            "@babel/preset-env",{
                "useBuiltIns":"entry",
                "corejs":3,
                "targets":{
                    "browsers":[
                        "Chrome >= 59",
                        "FireFox >= 44",
                        "Safari >=7",
                        "ie >= 9",
                        "last 4 Edge versions"
                    ]
                }
            }
        ],
        "@babel/preset-react"
    ],
    "plugins":[
        /* ["@babel/plugin-transform-runtime",{"corejs":3}], */
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-transform-arrow-functions",
        "react-hot-loader/babel"
    ]
}